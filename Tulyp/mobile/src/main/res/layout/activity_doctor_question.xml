<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.kathyyliang.tulyp.DoctorQuestion">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:src="@drawable/landingfield"
        android:alpha="0.75" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Are you a doctor?"
        android:id="@+id/doctorquestion"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:textAlignment="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:columnCount="2"
        android:rowCount="1"
        android:useDefaultMargins="false"
        android:layout_below="@+id/doctorquestion"
        android:layout_alignEnd="@+id/doctorquestion"
        android:layout_alignStart="@+id/doctorquestion"
        android:layout_marginTop="20dp">

        <Button
            android:layout_height="wrap_content"
            android:text="Yes"
            android:id="@+id/yesbutton"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:alpha="0.75"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/colorDefault" />

        <Button
            android:layout_height="wrap_content"
            android:text="No"
            android:id="@+id/nobutton"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:alpha="0.75"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/colorDefault" />
    </GridLayout>

</RelativeLayout>
