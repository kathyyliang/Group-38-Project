<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.kathyyliang.tulyp.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background"
        android:scaleType="centerCrop"
        android:layout_alignParentStart="true"
        android:src="@drawable/landingfield" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:id="@+id/whitetulip"
        android:src="@drawable/whitetransparenttulip"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:rowCount="1"
        android:useDefaultMargins="false">

        <Button
            android:layout_height="wrap_content"
            android:text="Sign In"
            android:id="@+id/startsignin"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_columnWeight="1" />

        <Button
            android:layout_height="wrap_content"
            android:text="Join Now"
            android:id="@+id/startjoinnow"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:focusable="false"
            android:backgroundTint="@color/colorPrimary" />
    </GridLayout>

</RelativeLayout>
